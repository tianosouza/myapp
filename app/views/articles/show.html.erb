<div class="min-w-full flex max-w-sm p-6 bg-white border border-gray-200 rounded-md shadow dark:bg-gray-800 dark:border-gray-700"></div>
  <%= turbo_frame_tag "articles" do %>
  <h1><%= @article.title %></h1>
  <p><%= @article.content %></p>

  <h2>Comments</h2>
  <%= render @article.comments %>

  <h2>Add a comment:</h2>
  <%= form_with(model: [ @article, @article.comments.build ], local: true) do |form| %>
    <div class="field">
      <%= form.label :content %>
      <%= form.text_area :content %>
    </div>
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>

  <%= link_to 'Back to Articles', articles_path %>

  <% end %>
</div>